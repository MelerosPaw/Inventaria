<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="horizontal"
  tools:parentTag="android.widget.LinearLayout">

  <Button
    android:id="@+id/btn__decrease"
    android:layout_width="@dimen/min_clickable_area"
    android:layout_height="@dimen/min_clickable_area"
    android:background="@drawable/background_quantity_view_buttons"
    android:minHeight="0dp"
    android:minWidth="0dp"
    android:textSize="18sp"
    android:text="-" />

  <EditText
    android:id="@+id/input__amount"
    android:inputType="number"
    android:minEms="1"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:text="1"
    android:textSize="18sp"
    android:gravity="center_horizontal"
    android:background="@null"
    tools:ignore="HardcodedText"
    android:importantForAutofill="no" />

  <Button
    android:id="@+id/btn__increase"
    android:layout_width="@dimen/min_clickable_area"
    android:layout_height="@dimen/min_clickable_area"
    android:background="@drawable/background_quantity_view_buttons"
    android:minHeight="0dp"
    android:minWidth="0dp"
    android:textSize="18sp"
    android:text="+" />

</merge>